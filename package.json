{
	"name": "quoter",
	"version": "5.2.1",
	"description": "The Quote Book for Discord.",
	"homepage": "https://quoter.cc",
	"author": "Nick Oates <nick@nickoates.com> (https://nickoates.com)",
	"license": "AGPL-3.0-only",
	"main": "src/main.ts",
	"private": true,
	"scripts": {
		"start": "bun run ./src/main.ts",
		"lint": "eslint . && prettier --check .",
		"lint:fix": "eslint --fix . && prettier --write .",
		"deploy": "bun run ./src/util/deployCommands.ts"
	},
	"bugs": {
		"url": "https://github.com/quoter/quoter/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/quoter/quoter.git"
	},
	"dependencies": {
		"@napi-rs/canvas": "0.1.84",
		"bufferutil": "^4.1.0",
		"canvas-multiline-text": "1.0.3",
		"discord.js": "^14.25.1",
		"fuse.js": "^7.1.0",
		"mongoose": "^9.0.2",
		"ms": "^2.1.3",
		"utf-8-validate": "^6.0.6",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.4",
		"@types/canvas-multiline-text": "^1.0.2",
		"@types/ms": "^2.1.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.4.2"
	},
	"peerDependencies": {
		"typescript": "^5.2.2"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"root": true
	}
}
